@model List<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Ürünler</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Dashboard v1</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <a href="/Product/Create" class="btn btn-success btn-sm"><i class="fas fa-plus"></i> Yeni Ürün Ekle </a>
            @if (TempData["Message"] != null)
            {
                <a class="alert alert-danger mt-2">
                    @TempData["Message"]
                </a>
            }
            <!-- Small boxes (Stat box) -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Ürünler Tablosu</h3>

                            <div class="card-tools">
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-default">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-0" style="height: auto;">
                            <table class="table table-head-fixed text-nowrap">
                                <thead>
                                    <tr class="text-center">
                                        <th>ID</th>
                                        <th>Images</th>
                                        <th>Title</th>
                                        <th>Web Id</th>
                                        <th>Price</th>
                                        <th>Stock</th>
                                        <th>Marka</th>
                                        <th>Kategori</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="text-center">
                                            <td>@item.Id</td>
                                            <td> <img src="~/images/Home/@item.Images[0].Url" style="width:50px; height:auto" /></td>
                                            <td>@item.Title</td>
                                            <td>@item.WebID</td>
                                            <td>@item.Price</td>
                                            <td>@item.Stock</td>
                                            <td>@item.Brand.Name</td>
                                            <td>@item.Categories.Name</td>
                                            <td>
                                                <a href="~/Product/Update?id=@item.Id" class="btn btn-secondary btn-sm"><i class="fas fa-edit"></i> Güncelle </a>
                                                <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-danger btn-sm"> <i class="fas fa-trash-alt"></i> Sil </a>
                                            </td>                                            
                                        </tr>
                                    }
                                                                    
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>